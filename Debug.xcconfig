// Debug configuration for AI-Mixtapes
#include "Base.xcconfig"

// Debug-specific settings
DEBUG = 1
DEBUG_INFORMATION_FORMAT = dwarf
ENABLE_TESTABILITY = YES
GCC_DYNAMIC_NO_PIC = NO
GCC_OPTIMIZATION_LEVEL = 0
GCC_PREPROCESSOR_DEFINITIONS = DEBUG=1 $(inherited)
MTL_ENABLE_DEBUG_INFO = INCLUDE_SOURCE
ONLY_ACTIVE_ARCH = YES
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG $(inherited)
SWIFT_OPTIMIZATION_LEVEL = -Onone

// Debug-specific feature flags
ENABLE_MEMORY_GRAPH_DEBUGGER = 1
ENABLE_VIEW_DEBUG_GAUGES = 1
ENABLE_RUNTIME_DEBUGGING = 1

// Logging level for debug
ERROR_LOG_LEVEL = 4 // Debug level

// Performance monitoring for debug
ENABLE_PERFORMANCE_MONITORING = 1
ENABLE_MEMORY_DEBUGGING = 1
ENABLE_THREAD_SANITIZER = 1

// Testing configuration
ENABLE_TESTING = 1
ENABLE_CODE_COVERAGE = YES
ENABLE_PREVIEWS = YES

// ML/AI Debug settings
ENABLE_ML_DEBUGGING = 1
ML_MEMORY_BUDGET = 512 // Higher for debugging

// Audio processing debug
ENABLE_AUDIO_DEBUG_LOGGING = 1
ENABLE_AUDIO_VISUALIZATION_DEBUG = 1
